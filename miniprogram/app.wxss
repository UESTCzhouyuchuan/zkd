/**app.wxss**/
@import 'icon.wxss';
@import 'colorui.wxss';
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}


page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.hover{
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}